%button.btn.btn-default{"data-target" => "#myModal", "data-toggle" => "modal", :type => "button","data-backdrop"=>"false"}Create post
#myModal.modal.fade{"aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h4#myModalLabel.modal-title Create post
      .modal-body
      =form_for Post.new do |f|
        .row
          .col-md-2
          .col-md-8
            %h5
              .form-group
                =f.label :title
                =f.text_field :title, autofocus: true,class:"form-control"
              .form-group
                = f.label :content
                =f.text_area :content,class:"form-control"
        -#.actions
        .modal-footer
          = f.submit "Create post",class:"btn btn-success btn-sm"
          %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close