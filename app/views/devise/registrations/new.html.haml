= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  .row
    .col-md-4
    .col-md-4
      .panel-default
        .panel-heading
          %h3
            =t(:sign_up)
          = devise_error_messages!
          .form-group
            = f.label :username
            %br/
            = f.text_field :username, autofocus: true,class:"form-control"
          .form-group
            = f.label :email
            %br/
            = f.email_field :email, autofocus: true,class:"form-control"
          .form-group
            = f.label :password
            - if @minimum_password_length
              %em
                (#{@minimum_password_length} characters minimum)
            %br/
            = f.password_field :password, autocomplete: "off",class:"form-control"
          .form-group
            = f.label :password_confirmation
            %br/
            = f.password_field :password_confirmation, autocomplete: "off",class:"form-control"
          .form-group
            %strong
              =t(:avatar)
            %br
            .avatarka
              =t(:select_file)
              = f.file_field :image,size:"1",style:"margin-top: -50px; margin-left:-410px; -moz-opacity: 0; filter: alpha(opacity=0); opacity: 0; font-size: 150px; height: 100px;"
            %br
            -if current_user.image.thumb.blank? || !current_user.image.thumb.file.exists?
              = image_tag("default.png", size: "200x200", alt: "Avatar",class:"img-circle")
            %br/
            -if @user.image.thumb.blank? || !@user.image.thumb.file.exists?
              = image_tag("default.png", size: "200x200", alt: "Avatar",class:"img-circle")
            -else
              = image_tag(@user.image.thumb,class:"img-circle")
          .actions
            = f.submit t(:sign_up),class:"btn btn-success btn-sm"
            = render "devise/shared/links"
