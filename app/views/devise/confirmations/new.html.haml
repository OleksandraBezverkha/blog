= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f|
  .row
    .col-md-4
    .col-md-4
      .panel-default
        .panel-heading
          %h3
            =t(:resend_confirmation_instructions)
          = devise_error_messages!
          .form-group
            = f.label :username
            %br/
            = f.text_field :username, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),class:"form-control"
          .actions
            = f.submit t(:resend_confirmation_instructions),class:"btn btn-default"
          = render "devise/shared/links"
