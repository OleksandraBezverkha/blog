%button.btn.btn-default{"data-target" => "#myModal", "data-toggle" => "modal", :type => "button","data-backdrop"=>"false"}
  =t(:create_post)
#myModal.modal.fade{"aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h4#myModalLabel.modal-title
          =t(:create_post)
      .modal-body
        =form_for(Post.new) do |f|
          .row
            .col-md-2
            .col-md-8
              %h5
                .form-group
                  =f.label t(:title)
                  =f.text_field :title, autofocus: true,class:"form-control",:required=>"required","aria-required"=>"true",:oninvalid=>t(:Pleas_enter_title),:oninput=>"setCustomValidity('')",:maxlength=>"150"
                .form-group
                  = f.label t(:content)
                  =f.text_area :content,class:"form-control",:required => "required","aria-required" => "true",:oninvalid => t(:Please_enter_content),:oninput => "setCustomValidity('')",:maxlength=>"10000"
                .form-group
                  = f.label t(:tag_list)
                  %br/
                  = f.text_field :tag_list,'data-role'=>'tagsinput',class:"form-control"
          -#.actions
          .modal-footer
            = f.submit t(:create_post),class:"btn btn-success btn-sm"
            %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"}
              =t(:close)
